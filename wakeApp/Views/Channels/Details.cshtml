@using wakeApp.Models
@model ComponentViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="menu-channel">
        <div class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" style="height:250px;">
                    <img src="@Html.DisplayFor(model => model.channelCP.ImageBanner)" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@Html.DisplayFor(model => model.channelCP.ChannelName)</h5>
                        <p>@Html.DisplayFor(model => model.channelCP.ChannelDescription)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="sub-menu-channel card-body" style="background-color: #131313;">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <h5 class="card-title">@Html.DisplayFor(model => model.channelCP.ChannelName)</h5>
                    <a class="btn btn-primary d-flex" asp-action="Edit" asp-route-id="@Model.channelCP.Id">Customize Channel</a>
                </div>
            </nav>
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-channel">
                            <li class="nav-item">
                                <a class="nav-channel-link active" aria-current="page" href="#">Videos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-channel-link" href="#">Playlist</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-channel-link" href="#">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-channel-link" href="#">Community</a>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-2 bg-dark" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-dark btn-outline-info" type="submit"><i class="fa-brands fa-searchengin"></i></button>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!--<partial name="../Channels/Videos.cshtml" view-data="ViewData" />-->
</div>

