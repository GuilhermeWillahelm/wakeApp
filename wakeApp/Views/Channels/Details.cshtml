@using wakeApp.Dtos
@model ViewModel

@{
    ViewData["Title"] = @Model.ChannelDto.ChannelName + " - ";
    ViewData["Follows"] = "Nenhum Inscrito";

}

<div>
    <div class="menu-channel">
        <div class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" style="height:250px;">
                    <img src="@Html.DisplayFor(model => model.ChannelDto.ImageBanner)" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@Html.DisplayFor(model => model.ChannelDto.ChannelName)</h5>
                        <p>@Html.DisplayFor(model => model.ChannelDto.SubtitleChannel)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="sub-menu-channel card-body" style="background-color: #131313;">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <div class="" style="text-align:center;">
                        <img src="@Html.DisplayFor(model => model.ChannelDto.IconChannel)" style="width: 70px; ">
                        <h5 class="card-title" style="align-items:center;">@Html.DisplayFor(model => model.ChannelDto.ChannelName)</h5>
                        @if(Model.CountFollowers == 0)
                        {
                            @ViewData["Follows"]
                        }
                        else 
                        {
                            <p class="card-title" style="align-items:center;">
                                @Html.DisplayFor(model => model.CountFollowers) Inscritos
                            </p>
                        }
                    </div>
                    <!--
                    if (Model != null)
                    {
                        <a class="btn btn-primary d-flex" asp-action="Edit" asp-route-id="Model.Id">Customize Channel</a>
                    }
                    -->
                    @if (Model != null)
                    {
                     
                    }
                </div>
            </nav>
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav nav-pills me-auto mb-2 mb-lg-0 nav-channel" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-channel-link active" id="pills-videos-tab" data-bs-toggle="pill" data-bs-target="#pills-videos" role="tab">Videos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-channel-link" id="pills-playlist-tab" data-bs-toggle="pill" data-bs-target="#pills-playlist" role="tab">Playlist</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-channel-link" id="pills-about-tab" data-bs-toggle="pill" data-bs-target="#pills-about" role="tab">Sobre</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-channel-link" id="pills-community-tab" data-bs-toggle="pill" data-bs-target="#pills-community" role="tab">Comunidade</a>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-2 bg-dark" type="search" placeholder="Search" aria-label="Search">
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="tab-content" id="pills-tabContent" style="margin: 20px;">
        <div class="tab-pane fade show active" id="pills-videos" role="tabpanel" aria-labelledby="pills-videos-tab">
            @if (Model.PostVideoDtos != null)
            {
                @foreach (var item in Model.PostVideoDtos)
                {
                    <div class="card-1 d-inline-block" style="width: 18rem; margin: 6px;">
                        <a asp-controller="PostVideos" asp-action="Details" asp-route-id="@item.Id">
                            <img src="@Html.DisplayFor(modelItem => item.ThumbImage)" class="card-img-top" alt="...">
                            <div class="card-body">
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Title)</p>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>

        <div class="tab-pane fade" id="pills-playlist" role="tabpanel" aria-labelledby="pills-about-tab">
            <h4>Ainda sem playlist</h4>
        </div>

        <div class="tab-pane fade" id="pills-about" role="tabpanel" aria-labelledby="pills-about-tab">
            <h4>@Html.DisplayFor(model => model.ChannelDto.ChannelDescription)</h4>
        </div>

        <div class="tab-pane fade" id="pills-community" role="tabpanel" aria-labelledby="pills-community-tab">
            <h4>Comments</h4>
            <form>
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <input type="email" class="form-control" id="inputEmail3">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </div>
    </div>

</div>

