@model wakeApp.Models.Channel

@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center">
    <div class="card col-md-6">
        <h3 class="text-center m-3">Criar Canal</h3>
        <hr />
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChannelName" class="control-label text-black"></label>
                <input asp-for="ChannelName" class="form-control" />
                <span asp-validation-for="ChannelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubtitleChannel" class="control-label text-black"></label>
                <input asp-for="SubtitleChannel" class="form-control" />
                <span asp-validation-for="SubtitleChannel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChannelDescription" class="control-label text-black"></label>
                <input asp-for="ChannelDescription" class="form-control" />
                <span asp-validation-for="ChannelDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="BannerChannel" class="control-label label-file">
                    <i class="fa-solid fa-upload"></i>
                    <p>Upload Banner</p>
                </label>
                <input name="BannerChannel" type="file" class="form-control input-file" id="BannerChannel" />
                <span for="BannerChannel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ChannelIcon" class="control-label label-file">
                    <i class="fa-solid fa-upload"></i>
                    <p>Upload Icone</p>
                </label>
                <input name="ChannelIcon" type="file" class="form-control input-file" id="ChannelIcon" />
                <span for="ChannelIcon" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
        <div class="form-group text-center m-2">
            <a class="btn btn-danger" asp-controller="PostVideos" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
