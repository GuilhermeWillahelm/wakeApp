@using wakeApp.Dtos
@model ViewModel

@foreach (var item in Model.PostVideoDtos)
{
    <a asp-action="Details" asp-route-id="@item.Id">
    <div class="card-1 d-inline-block" style="width: 19rem; margin: 8px;">
        
            <img src="@Html.DisplayFor(modelItem => item.ThumbImage)" class="card-img-top" alt="...">
            <div class="card-body">
                <ul style="padding:0px;">
                    <li style="display:inline-block;">
                        <a asp-controller="Channels" asp-action="Details" asp-route-id="@item.ChannelDto.Id">
                        <img src="@Html.DisplayFor(modelItem => item.ChannelDto.IconChannel)" style="border:none; width:50px; height:50px;" />
                        </a>
                    </li>
                    <li style="display:inline-block;">
                        <a asp-action="Details" asp-route-id="@item.Id">
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Title)</p>
                        </a>
                    </li>
                </ul>
            </div>
    </div>
    </a>
}